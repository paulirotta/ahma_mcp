{
    "mcpServers": {
        "ahma_mcp": {
            "type": "stdio",
            "cwd": "${workspaceFolder}",
            "command": "target/release/ahma_mcp",
            "args": [
                "--tools-dir",
                ".ahma/tools",
                "--synchronous"
            ],
            "dev": {
                "watch": [
                    "target/release/ahma_mcp"
                ],
                "command": "cargo",
                "args": [
                    "run",
                    "--release",
                    "--",
                    "--tools-dir",
                    ".ahma/tools",
                    "--synchronous"
                ]
            }
        }
    },
    "inputs": []
}