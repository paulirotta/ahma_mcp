{
    "servers": {
        "Ahma VSCode": {
            "type": "stdio",
            "cwd": "${workspaceFolder}",
            "command": "target/release/ahma_mcp",
            "args": [
                "--tools-dir",
                ".ahma/tools",
                "--no-sandbox"
            ]
        },
        "Ahma HTTP VSCode": {
            "type": "http",
            "url": "http://localhost:3000/mcp"
        }
    }
}