{
    "name": "pr_closer",
    "description": "Close a GitHub pull request.",
    "command": "gh",
    "subcommands": [
        {
            "name": "pr-close",
            "description": "Close a pull request",
            "initial_args": [
                "pr",
                "close"
            ],
            "options": [
                {
                    "name": "repo",
                    "type": "string",
                    "description": "The repository to close the pull request in.",
                    "required": true
                },
                {
                    "name": "comment",
                    "type": "string",
                    "description": "The comment to leave when closing the pull request."
                },
                {
                    "name": "delete-branch",
                    "type": "boolean",
                    "description": "Delete the branch after closing."
                }
            ],
            "positional_args": [
                {
                    "name": "pr_number",
                    "type": "string",
                    "description": "The number of the pull request to close.",
                    "required": true
                }
            ]
        }
    ]
}