{
    "name": "gh",
    "command": "gh",
    "description": "GitHub's official command-line tool.",
    "subcommand": [
        {
            "name": "pr_close",
            "description": "Close a pull request.",
            "synchronous": true,
            "options": [
                {
                    "name": "repo",
                    "alias": "R",
                    "type": "string",
                    "description": "The repository to close the pull request in.",
                    "required": true
                },
                {
                    "name": "comment",
                    "alias": "c",
                    "type": "string",
                    "description": "The comment to leave when closing the pull request."
                },
                {
                    "name": "delete-branch",
                    "alias": "d",
                    "type": "boolean",
                    "description": "Delete the branch after closing."
                }
            ],
            "positional_args": [
                {
                    "name": "pr_number",
                    "type": "string",
                    "description": "The number of the pull request to close.",
                    "required": true
                }
            ]
        }
    ]
}