{
    "servers": {
        "ahma_mcp": {
            "type": "stdio",
            "cwd": "${workspaceFolder}",
            "command": "./target/release/ahma_mcp",
            "args": [
                "--server",
                "--tools-dir",
                "tools"
            ],
            "dev": {
                "command": "cargo",
                "args": [
                    "watch",
                    "-w",
                    "src",
                    "-w",
                    "tools",
                    "-w",
                    "Cargo.toml",
                    "-w",
                    "Cargo.lock",
                    "-x",
                    "check",
                    "-x",
                    "run --release --bin ahma_mcp -- --server --tools-dir tools"
                ],
                "watch": [
                    "src/**/*.rs",
                    "tools/*.json",
                    "Cargo.toml",
                    "Cargo.lock"
                ]
            }
        }
    },
    "inputs": []
}