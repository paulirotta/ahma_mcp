{
    "servers": {
        "ahma_mcp": {
            "type": "stdio",
            "cwd": "${workspaceFolder}",
            "command": "target/debug/ahma_mcp",
            "args": [
                "--server",
                "--tools-dir",
                "tools"
            ],
            "dev": {
                "watch": [
                    "target/debug/ahma_mcp",
                    "tools/*.json"
                ],
                "command": "cargo",
                "args": [
                    "run",
                    "--",
                    "--server",
                    "--tools-dir",
                    "tools"
                ]
            }
        }
    },
    "inputs": []
}