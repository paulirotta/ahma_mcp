{
    "servers": {
        "Ahma-stdio-debug": {
            "type": "stdio",
            "command": "cargo",
            "args": [
                "run",
                "--package",
                "ahma_core",
                "--bin",
                "ahma_mcp",
                "--",
                "--log-to-stderr"
            ],
            "env": {
                "RUST_LOG": "debug"
            }
        },
        "Ahma http": {
            "type": "http",
            "url": "http://localhost:3000/mcp"
        }
    }
}