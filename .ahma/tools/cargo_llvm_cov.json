{
    "name": "cargo_llvm_cov",
    "description": "LLVM source-based code coverage for Rust projects",
    "command": "cargo",
    "synchronous": true,
    "enabled": true,
    "hints": {
        "default": "Coverage analysis. Review test coverage gaps, plan additional tests, or analyze code quality metrics.",
        "test": "Running tests with coverage - analyze coverage results, identify uncovered code paths, or plan test improvements.",
        "report": "Generating coverage reports - review coverage metrics, identify areas needing more tests, or analyze code quality.",
        "run": "Running binary with coverage - monitor execution paths, analyze performance-critical sections, or plan optimization strategies."
    },
    "subcommand": [
        {
            "name": "llvm-cov",
            "description": "Run tests and collect coverage data (default behavior).",
            "options": [
                {
                    "name": "html",
                    "type": "boolean",
                    "description": "Generate HTML coverage report"
                },
                {
                    "name": "json",
                    "type": "boolean",
                    "description": "Generate JSON coverage report"
                },
                {
                    "name": "lcov",
                    "type": "boolean",
                    "description": "Generate LCOV coverage report"
                },
                {
                    "name": "text",
                    "type": "boolean",
                    "description": "Generate text coverage report"
                },
                {
                    "name": "open",
                    "type": "boolean",
                    "description": "Generate HTML report and open in browser"
                },
                {
                    "name": "output-path",
                    "type": "string",
                    "description": "Specify a file to write coverage data into",
                    "format": "path"
                },
                {
                    "name": "output-dir",
                    "type": "string",
                    "description": "Specify a directory to write coverage report into",
                    "format": "path"
                },
                {
                    "name": "ignore-filename-regex",
                    "type": "string",
                    "description": "Skip source code files with file paths that match the given regex"
                },
                {
                    "name": "workspace",
                    "type": "boolean",
                    "description": "Test all packages in the workspace"
                },
                {
                    "name": "package",
                    "type": "string",
                    "description": "Package to run tests for"
                },
                {
                    "name": "exclude",
                    "type": "array",
                    "description": "Exclude packages from both the test and report"
                },
                {
                    "name": "features",
                    "type": "string",
                    "description": "Space or comma separated list of features to activate"
                },
                {
                    "name": "all-features",
                    "type": "boolean",
                    "description": "Activate all available features"
                },
                {
                    "name": "no-default-features",
                    "type": "boolean",
                    "description": "Do not activate the default feature"
                },
                {
                    "name": "manifest-path",
                    "type": "string",
                    "description": "Path to Cargo.toml",
                    "format": "path"
                },
                {
                    "name": "release",
                    "type": "boolean",
                    "description": "Build artifacts in release mode, with optimizations"
                },
                {
                    "name": "verbose",
                    "type": "boolean",
                    "description": "Use verbose output"
                },
                {
                    "name": "quiet",
                    "type": "boolean",
                    "description": "Display one character per test instead of one line"
                }
            ]
        },
        {
            "name": "llvm-cov_test",
            "description": "Run tests and generate coverage report (explicit test subcommand).",
            "options": [
                {
                    "name": "html",
                    "type": "boolean",
                    "description": "Generate HTML coverage report"
                },
                {
                    "name": "json",
                    "type": "boolean",
                    "description": "Generate JSON coverage report"
                },
                {
                    "name": "lcov",
                    "type": "boolean",
                    "description": "Generate LCOV coverage report"
                },
                {
                    "name": "text",
                    "type": "boolean",
                    "description": "Generate text coverage report"
                },
                {
                    "name": "open",
                    "type": "boolean",
                    "description": "Generate HTML report and open in browser"
                },
                {
                    "name": "output-path",
                    "type": "string",
                    "description": "Specify a file to write coverage data into",
                    "format": "path"
                },
                {
                    "name": "output-dir",
                    "type": "string",
                    "description": "Specify a directory to write coverage report into",
                    "format": "path"
                },
                {
                    "name": "workspace",
                    "type": "boolean",
                    "description": "Test all packages in the workspace"
                },
                {
                    "name": "package",
                    "type": "string",
                    "description": "Package to run tests for"
                }
            ]
        },
        {
            "name": "llvm-cov_run",
            "description": "Run a binary or example and generate coverage report.",
            "options": [
                {
                    "name": "html",
                    "type": "boolean",
                    "description": "Generate HTML coverage report"
                },
                {
                    "name": "json",
                    "type": "boolean",
                    "description": "Generate JSON coverage report"
                },
                {
                    "name": "bin",
                    "type": "string",
                    "description": "Test only the specified binary"
                },
                {
                    "name": "example",
                    "type": "string",
                    "description": "Test only the specified example"
                }
            ]
        },
        {
            "name": "llvm-cov_report",
            "description": "Generate coverage report from existing coverage data.",
            "options": [
                {
                    "name": "html",
                    "type": "boolean",
                    "description": "Generate HTML coverage report"
                },
                {
                    "name": "json",
                    "type": "boolean",
                    "description": "Generate JSON coverage report"
                },
                {
                    "name": "lcov",
                    "type": "boolean",
                    "description": "Generate LCOV coverage report"
                },
                {
                    "name": "text",
                    "type": "boolean",
                    "description": "Generate text coverage report"
                },
                {
                    "name": "open",
                    "type": "boolean",
                    "description": "Generate HTML report and open in browser"
                }
            ]
        },
        {
            "name": "llvm-cov_show-env",
            "description": "Output the environment set by cargo-llvm-cov to build Rust projects."
        },
        {
            "name": "llvm-cov_clean",
            "description": "Remove artifacts that cargo-llvm-cov has generated in the past.",
            "options": [
                {
                    "name": "manifest-path",
                    "type": "string",
                    "description": "Path to Cargo.toml",
                    "format": "path"
                }
            ]
        },
        {
            "name": "llvm-cov_nextest",
            "description": "Run tests with cargo nextest and collect coverage data.",
            "options": [
                {
                    "name": "html",
                    "type": "boolean",
                    "description": "Generate HTML coverage report"
                },
                {
                    "name": "json",
                    "type": "boolean",
                    "description": "Generate JSON coverage report"
                },
                {
                    "name": "lcov",
                    "type": "boolean",
                    "description": "Generate LCOV coverage report"
                },
                {
                    "name": "text",
                    "type": "boolean",
                    "description": "Generate text coverage report"
                },
                {
                    "name": "open",
                    "type": "boolean",
                    "description": "Generate HTML report and open in browser"
                },
                {
                    "name": "workspace",
                    "type": "boolean",
                    "description": "Test all packages in the workspace"
                },
                {
                    "name": "package",
                    "type": "string",
                    "description": "Package to run tests for"
                }
            ]
        }
    ]
}