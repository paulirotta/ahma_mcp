{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ToolConfig",
  "description": "Represents the complete configuration for a command-line tool.",
  "type": "object",
  "properties": {
    "availability_check": {
      "description": "Runtime availability probe executed at server startup.",
      "anyOf": [
        {
          "$ref": "#/$defs/AvailabilityCheck"
        },
        {
          "type": "null"
        }
      ]
    },
    "command": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "enabled": {
      "type": "boolean",
      "default": true
    },
    "guidance_key": {
      "description": "Key to look up guidance in tool_guidance.json",
      "type": [
        "string",
        "null"
      ]
    },
    "hints": {
      "$ref": "#/$defs/ToolHints",
      "default": {}
    },
    "input_schema": {
      "description": "Generated input schema (optional - auto-generated from subcommands)"
    },
    "install_instructions": {
      "description": "Installation guidance displayed when the tool is unavailable.",
      "type": [
        "string",
        "null"
      ]
    },
    "name": {
      "type": "string"
    },
    "sequence": {
      "description": "Optional sequence of tools to execute in order (for composite tools)",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/$defs/SequenceStep"
      }
    },
    "step_delay_ms": {
      "description": "Delay in milliseconds between sequence steps (default: SEQUENCE_STEP_DELAY_MS)",
      "type": [
        "integer",
        "null"
      ],
      "format": "uint64",
      "minimum": 0
    },
    "subcommand": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "#/$defs/SubcommandConfig"
      }
    },
    "synchronous": {
      "description": "Override the default execution mode for this tool.\n- `true`: Always run synchronously (blocking, returns result immediately)\n- `false`: Always run asynchronously (non-blocking, returns operation ID)\n- `null`/omitted: Use server default (async unless --sync CLI flag)\n\nInheritance: Subcommand-level settings override tool-level settings.",
      "type": [
        "boolean",
        "null"
      ]
    },
    "timeout_seconds": {
      "description": "Default timeout for operations in seconds",
      "type": [
        "integer",
        "null"
      ],
      "format": "uint64",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": [
    "name",
    "description",
    "command"
  ],
  "$defs": {
    "AvailabilityCheck": {
      "description": "Defines how to probe for tool or subcommand availability at runtime.",
      "type": "object",
      "properties": {
        "args": {
          "description": "Arguments passed to the availability probe.",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "command": {
          "description": "Optional override for the executable to invoke during the check. Defaults to the tool command.",
          "type": [
            "string",
            "null"
          ]
        },
        "skip_subcommand_args": {
          "description": "If true, do not append derived subcommand arguments when constructing the probe command.",
          "type": "boolean"
        },
        "success_exit_codes": {
          "description": "Exit codes considered successful (defaults to `[0]`).",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "type": "integer",
            "format": "int32"
          }
        },
        "working_directory": {
          "description": "Working directory used for the probe (defaults to project root).",
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    },
    "CommandOption": {
      "description": "Configuration for a single command-line option.",
      "type": "object",
      "properties": {
        "alias": {
          "type": [
            "string",
            "null"
          ]
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "file_arg": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "file_flag": {
          "type": [
            "string",
            "null"
          ]
        },
        "format": {
          "type": [
            "string",
            "null"
          ]
        },
        "items": {
          "anyOf": [
            {
              "$ref": "#/$defs/ItemsSpec"
            },
            {
              "type": "null"
            }
          ]
        },
        "name": {
          "type": "string"
        },
        "required": {
          "type": [
            "boolean",
            "null"
          ]
        },
        "type": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "type"
      ]
    },
    "ItemsSpec": {
      "description": "Schema details for array items.",
      "type": "object",
      "properties": {
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "format": {
          "type": [
            "string",
            "null"
          ]
        },
        "type": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "type"
      ]
    },
    "SequenceStep": {
      "description": "Represents a single step in a tool sequence",
      "type": "object",
      "properties": {
        "args": {
          "description": "Arguments to pass to the tool",
          "type": "object",
          "additionalProperties": true,
          "default": {}
        },
        "description": {
          "description": "Optional description for logging/display",
          "type": [
            "string",
            "null"
          ]
        },
        "subcommand": {
          "description": "Subcommand within that tool",
          "type": "string"
        },
        "tool": {
          "description": "Name of the tool to invoke",
          "type": "string"
        }
      },
      "additionalProperties": false,
      "required": [
        "tool",
        "subcommand"
      ]
    },
    "SubcommandConfig": {
      "description": "Configuration for a subcommand, allowing for nested commands.",
      "type": "object",
      "properties": {
        "availability_check": {
          "description": "Runtime availability probe executed at server startup.",
          "anyOf": [
            {
              "$ref": "#/$defs/AvailabilityCheck"
            },
            {
              "type": "null"
            }
          ]
        },
        "description": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "guidance_key": {
          "description": "Key to look up guidance in tool_guidance.json",
          "type": [
            "string",
            "null"
          ]
        },
        "install_instructions": {
          "description": "Installation guidance displayed when the subcommand is unavailable.",
          "type": [
            "string",
            "null"
          ]
        },
        "name": {
          "type": "string"
        },
        "options": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/CommandOption"
          }
        },
        "positional_args": {
          "description": "Optional arguments that are not flags, but positional values.",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/CommandOption"
          }
        },
        "sequence": {
          "description": "Optional sequence of tools to execute in order (for composite tools)",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/SequenceStep"
          }
        },
        "step_delay_ms": {
          "description": "Delay in milliseconds between sequence steps (default: SEQUENCE_STEP_DELAY_MS)",
          "type": [
            "integer",
            "null"
          ],
          "format": "uint64",
          "minimum": 0
        },
        "subcommand": {
          "type": [
            "array",
            "null"
          ],
          "items": {
            "$ref": "#/$defs/SubcommandConfig"
          }
        },
        "synchronous": {
          "description": "Override the default execution mode for this subcommand.\n- `true`: Always run synchronously (blocking, returns result immediately)\n- `false`: Always run asynchronously (non-blocking, returns operation ID)\n- `null`/omitted: Inherit from tool level, or use server default if tool doesn't specify\n\nInheritance: Subcommand-level settings override tool-level settings.",
          "type": [
            "boolean",
            "null"
          ]
        },
        "timeout_seconds": {
          "description": "Override timeout for this specific subcommand",
          "type": [
            "integer",
            "null"
          ],
          "format": "uint64",
          "minimum": 0
        }
      },
      "additionalProperties": false,
      "required": [
        "name",
        "description"
      ]
    },
    "ToolHints": {
      "description": "Provides hints to an AI agent on how to use a tool.",
      "type": "object",
      "properties": {
        "build": {
          "type": [
            "string",
            "null"
          ]
        },
        "clean": {
          "type": [
            "string",
            "null"
          ]
        },
        "custom": {
          "type": [
            "object",
            "null"
          ],
          "additionalProperties": {
            "type": "string"
          }
        },
        "dependencies": {
          "type": [
            "string",
            "null"
          ]
        },
        "run": {
          "type": [
            "string",
            "null"
          ]
        },
        "test": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "additionalProperties": false
    }
  }
}